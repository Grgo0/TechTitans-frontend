<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity">

        <!-- RecyclerView for the list of merchants -->

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="81dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/admin_home_title"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewMerchants"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.266" />

        <Button
            android:id="@+id/btn_createMerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="308dp"
            android:onClick="onCreateMerchantClick"
            android:text="@string/admin_home_create_merchant_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMerchants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/btn_createMerchant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.535" />

        <ImageView
            android:id="@+id/imgView_logout"
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/logout_baseline"
            android:onClick="onLogoutClick"
            android:src="@drawable/baseline_logout"
            app:layout_constraintStart_toEndOf="@+id/imgView_settings"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgView_settings"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/settings_baseline"
            android:onClick="onSettingsClick"
            android:src="@drawable/baseline_settings"
            app:layout_constraintStart_toEndOf="@+id/textView_title"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>